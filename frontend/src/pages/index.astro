---
import Layout from "../layouts/Layout.astro";
import { CarouselDemo } from "@/components/CarouselDemo";
import { NavbarDemo } from "@/components/resizable-navbar";
import { StickyBannerDemo } from "@/components/sticky-banner";
import { WavyBackground } from "@/components/ui/wavy-background";
import { StickyScrollRevealDemo } from "@/components/sticky-scroll-revealDemo";
import { HeroParallaxDemo } from "@/components/hero-parallaxDemo";
---

<StickyBannerDemo client:load />
<Layout title="Sorteos CAMI">
  <NavbarDemo client:load />
  <main class="w-full h-full">
    <section class="w-full h-[50vh]">
      <WavyBackground client:load>
        <p
          class="text-2xl md:text-4xl lg:text-7xl text-white font-bold inter-var text-center mb-10"
        >
          El sorteo comienza en:
        </p>
        <div class="flex items-center justify-center gap-4 mb-12">
          <!-- Días -->
          <div
            class="bg-gradient-to-br from-green-400 to-green-600 rounded-3xl p-6 w-32 h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div id="days" class="text-5xl font-bold text-white mb-1">00</div>
            <div class="text-white text-sm font-medium opacity-90">Días</div>
          </div>

          <span class="text-4xl font-bold text-white">:</span>

          <!-- Horas -->
          <div
            class="bg-gradient-to-br from-green-400 to-green-600 rounded-3xl p-6 w-32 h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div id="hours" class="text-5xl font-bold text-white mb-1">00</div>
            <div class="text-white text-sm font-medium opacity-90">Horas</div>
          </div>

          <span class="text-4xl font-bold text-white">:</span>

          <!-- Minutos -->
          <div
            class="bg-gradient-to-br from-green-400 to-green-600 rounded-3xl p-6 w-32 h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div id="minutes" class="text-5xl font-bold text-white mb-1">
              00
            </div>
            <div class="text-white text-sm font-medium opacity-90">Minutos</div>
          </div>

          <span class="text-4xl font-bold text-white">:</span>

          <!-- Segundos -->
          <div
            class="bg-gradient-to-br from-green-400 to-green-600 rounded-3xl p-6 w-32 h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div id="seconds" class="text-5xl font-bold text-white mb-1">
              00
            </div>
            <div class="text-white text-sm font-medium opacity-90">
              Segundos
            </div>
          </div>
        </div>
      </WavyBackground>
    </section>

    <div class="max-w-7xl mx-auto">
      <p
        class="text-2xl md:text-4xl lg:text-5xl text-green-500 font-bold inter-var text-center uppercase mt-24"
      >
        Premiazos que puedes ganar
      </p>
      <CarouselDemo client:load />
    </div>



    <StickyScrollRevealDemo client:load/>


      <HeroParallaxDemo client:load/>
    
  </main>
</Layout>
