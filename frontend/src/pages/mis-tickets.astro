---
import Layout from "../layouts/Layout.astro";
import { NavbarDemo } from "@/components/resizable-navbar";
import { StickyBannerDemo } from "@/components/sticky-banner";
---

<StickyBannerDemo client:load />
<Layout title="Mis Tickets">
    <NavbarDemo client:load />

  <section class="w-full min-h-[60vh] flex flex-col items-center justify-center bg-gray-50 px-4">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center">
        <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">
          Consulta tus tickets
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Ingresa tu DNI para ver tus tickets registrados
        </p>
      </div>

      <form id="buscarTickets" class="mt-8 space-y-6">
        <div class="relative">
          <label for="dni" class="sr-only">DNI</label>
          <input
            type="number"
            id="dni"
            name="dni"
            required
            class="block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-500 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm transition duration-150 ease-in-out"
            placeholder="Ingresa tu número de DNI"
          />
          <button 
            type="submit"
            class="mt-4 w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out"
          >
            Buscar tickets
          </button>
        </div>
      </form>

      <div 
        id="resultado" 
        class="mt-6 p-4 rounded-lg bg-white shadow-sm border border-gray-100 text-sm text-gray-800 hidden"
      ></div>
    </div>
  </section>

    <script>
      const form = document.getElementById("buscarTickets");
      const resultado = document.getElementById("resultado");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const dni = document.getElementById("dni").value.trim();
        const resultado = document.getElementById("resultado");
        const submitButton = form.querySelector('button[type="submit"]');
        
        if (!dni) return;

        try {
          // Mostrar estado de carga
          submitButton.disabled = true;
          submitButton.innerHTML = `
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Buscando...
          `;
          
          const response = await fetch(`https://premios-backend-5dd4e4af7e8c.herokuapp.com/api/tickets/${dni}`);
          if (!response.ok) throw new Error("No se encontraron tickets asociados a este DNI");

          const data = await response.json();
          
          // Mostrar resultados
          resultado.classList.remove('hidden');
          resultado.innerHTML = `
            <div class="space-y-4">
              <h3 class="font-semibold text-gray-900">Tickets encontrados</h3>
              <div class="divide-y divide-gray-200">
                ${data.map(t => `
                  <div class="py-3">
                    <div class="flex justify-between items-center">
                      <div>
                        <p class="text-sm font-medium text-gray-900">${t.sorteo}</p>
                        <p class="text-sm text-gray-500">Ticket N° ${t.codigo_ticket}</p>
                      </div>
                      <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Activo
                      </span>
                    </div>
                  </div>
                `).join('')}
              </div>
            </div>
          `;
        } catch (err) {
          resultado.classList.remove('hidden');
          resultado.innerHTML = `
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800">${err.message}</p>
                </div>
              </div>
            </div>
          `;
        } finally {
          // Restaurar botón
          submitButton.disabled = false;
          submitButton.innerHTML = 'Buscar tickets';
        }
      });
    </script>
</Layout>
