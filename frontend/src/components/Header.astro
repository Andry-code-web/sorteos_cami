---
import logo from "../assets/astro.svg";
---

<header class="">
    <div class="w-full h-20 bg-white relative">
        <div class="h-20 flex items-center absolute z-50 top-1/2 left-[15%]">
            <img src={logo.src} alt="Sorteos Cami" class="h-20" />
        </div>

        <div class="h-20 grid grid-cols-4">
            <div class="col-span-2 col-start-3">
                <div class="h-full flex items-center  gap-8">

                    <!-- phone -->
                    <div class="flex items-center gap-4 border-r pr-8">
                        <div class="w-12 h-12 border border-green-500 text-white flex items-center justify-center rounded-full">
                            <i class="ri-phone-line text-green-500 text-xl"></i>
                        </div>
                        <div>
                            <p class="font-sans font-light text-md text-[#999]">Llamanos ahora</p>
                            <p class="font-sans font-normal text-sm text-black">+51 987 654 321</p>
                        </div>
                    </div>

                    <!-- mail -->
                     <div class="flex items-center gap-4 border-r pr-8">
                        <div class="w-12 h-12 border border-green-500 text-white flex items-center justify-center rounded-full">
                            <i class="ri-mail-line text-green-500 text-xl"></i>
                        </div>
                        <div>
                            <p class="font-sans font-light text-md text-[#999]">Env√≠anos un correo</p>
                            <p class="font-sans font-normal text-sm text-black">info@mail.com</p>
                        </div>
                    </div>

                    <!-- btn-mas -->
                     <div class="flex items-center gap-4">
                        <div class="w-36 h-12 border border-green-500 text-green-600 flex items-center justify-center hover:bg-[#5cb85c] hover:text-white cursor-pointer">
                            <p class="font-sans font-light text-md">Ver mas</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full h-16 bg-[#363636] text-white">
        <div id="" class="contenedor">
            <div class="h-16 grid grid-cols-8">
                <div class="col-start-5 flex items-center">
                    <nav class="">
                        <div id="navbar" class="">
                            <ul
                                class="flex space-x-8 text-xs font-light uppercase"
                            >
                                <li><a href="/" class="">Inicio</a></li>
                                <li><a href="/sorteos" class="">Sorteos</a></li>
                                <li>
                                    <a href="/contacto" class="">Contacto</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>
